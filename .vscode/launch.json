{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node-terminal",
      "name": "Debug Current TS File (ts-node)",
      "request": "launch",
      "command": "docker compose up -d | yarn dev",
      "cwd": "${fileDirname}",
      "postDebugTask": "closingDocker"
    },
  ],
  "tasks": [
    {
      "label": "closingDocker",
      "type": "shell",
      "command": "docker compose down",
      "problemMatcher": []
    }
  ]
}